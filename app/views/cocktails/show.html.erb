<div class="navbar-wagon">
  <em>Welcome, drinkers</em>
  <div class="navbar-wagon-right">
    <%= link_to "Back to the drinks!", cocktails_path %>
  </div>

</div>

<div class="card-big" >
<h1> <%= @cocktail.name %> </h1>
<p> Below you can find the doses for this cocktail. </p>
<%= cl_image_tag @cocktail.photo %>

<% @cocktail.doses.each do |dose| %>

  <div style="line-height: 42px">
    <%= dose.description %> of <%= dose.ingredient.name %> <br>
    <%= link_to "Delete this dose", cocktail_dose_path(dose), method: :delete %>
    <% end %> <br>
    <%= link_to "Add a dose to this one", new_cocktail_dose_path(@cocktail)  %>

  </div>
</div>
